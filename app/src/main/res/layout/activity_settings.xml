<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".SettingsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingsProfileImage"
        android:layout_width="193dp"
        android:layout_height="181dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/profile_male_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/settingsDisplayGender"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:text="Unspecified"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/settingsProfileImage"
        app:layout_constraintStart_toStartOf="@+id/settingsProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/settingsProfileImage"
        app:layout_constraintVertical_bias="0.116" />

    <EditText
        android:id="@+id/settingsStatusText"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Hey... I am happy"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/settingsDisplayGender"
        app:layout_constraintStart_toStartOf="@+id/settingsDisplayGender"
        app:layout_constraintTop_toBottomOf="@+id/settingsDisplayGender"
        android:inputType="none"/>

    <Button
        android:id="@+id/settingsChangeImgBtn"
        android:layout_width="196dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bt_shape"
        android:stateListAnimator="@drawable/state_list_animator_z"
        android:text="@string/change_pic"
        android:textColor="#d3d3d3"
        app:layout_constraintEnd_toEndOf="@+id/settingsStatusText"
        app:layout_constraintStart_toStartOf="@+id/settingsStatusText"
        app:layout_constraintTop_toBottomOf="@+id/settingsStatusText" />

    <Button
        android:id="@+id/settingsChangeStatus"
        android:layout_width="196dp"
        android:layout_height="58dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bt_shape"
        android:stateListAnimator="@drawable/state_list_animator_z"
        android:text="@string/change_status"
        android:textColor="#d3d3d3"
        app:layout_constraintEnd_toEndOf="@+id/settingsChangeImgBtn"
        app:layout_constraintStart_toStartOf="@+id/settingsChangeImgBtn"
        app:layout_constraintTop_toBottomOf="@+id/settingsChangeImgBtn" />

    <Button
        android:id="@+id/settingsChangeGender"
        android:layout_width="196dp"
        android:layout_height="58dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bt_shape"
        android:stateListAnimator="@drawable/state_list_animator_z"
        android:text="@string/change_gender"
        android:textColor="#d3d3d3"
        app:layout_constraintEnd_toEndOf="@+id/settingsChangeImgBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/settingsChangeImgBtn"
        app:layout_constraintTop_toBottomOf="@+id/settingsChangeStatus" />


</android.support.constraint.ConstraintLayout>
